<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="hintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white_50</item>
    </style>

    <style name="helperStyle">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="errorStyle">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/red_100</item>
    </style>

</resources>